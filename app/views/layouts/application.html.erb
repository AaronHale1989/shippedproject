<!DOCTYPE html>
<html>
  <head>
    <title>Shipped!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css">
  </head>
  <body>
    <div id="boat"><%= image_tag "boat.png" %></div>

		<div class='has-text-centered is-uppercase'>
		Steam Cargo
		</div>
    <div class="waves">
    
    </div>

<nav>
<section class="hero is-link">
	  <!-- Hero head: will stick at the top -->
	  <div class="hero-head">
	    <nav class="navbar">
	      <div class="container">
	        <div class="navbar-brand">
	          <%= link_to 'Home', root_path, class: "navbar-item" %>
	          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
	            <span></span>
	            <span></span>
	            <span></span>
	          </span>
	        </div>
	        <div id="navbarMenuHeroA" class="navbar-menu">
	          <div class="navbar-end">
              <% if user_signed_in? %>
						 	<%= link_to "Create New Job", new_job_path, class:"navbar-item" %>
							<%= link_to "Profile Page", "/users/current_user.id", class:"navbar-item" %>
                <%= link_to "Create Boat", new_boat_path, class:"navbar-item" %>
                <%= link_to "Boats List", boats_path, class:"navbar-item" %>
                <%= link_to'Logout', destroy_user_session_path, method: :delete, class:"navbar-item" %>
              <% end %>
							<% if !user_signed_in? %>
							<%= link_to "Sign Up", new_user_registration_path, class:"navbar-item" %>
							<%= link_to "Log In", new_user_session_path, class:"navbar-item" %>
              <% end %>

	          </div>
	        </div>
	      </div>
	    </nav>
	  </div>

	  <!-- Hero content: will be in the middle -->
	  <div class="hero-body">
	    <div class="container has-text-centered">
	      <h1 class="title">
	        <%= yield :page_title %>
	      </h1>
	    </div>
	  </div>
	</section>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= javascript_include_tag "home"%>
  </body>
</html>
