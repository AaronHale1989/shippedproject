<!DOCTYPE html>
<html>
  <head>
    <title>ShippedDevise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css">


  </head>

  <body>
    <div id="boat"><%= image_tag "boat.png" %></div>
    <div id="page-title"><strong>Steam Cargo</strong></div>
<nav>

<section class="hero is-primary is-medium">
	  <!-- Hero head: will stick at the top -->
	  <div class="hero-head">
	    <nav class="navbar">
	      <div class="container">
	        <div class="navbar-brand">
	          <%= link_to 'Home', root_path, class: "navbar-item" %>
	          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
	            <span></span>
	            <span></span>
	            <span></span>
	          </span>
	        </div>
	        <div id="navbarMenuHeroA" class="navbar-menu">
	          <div class="navbar-end">
              <% if user_signed_in? %>
              <%= link_to "Create New Job", new_job_path, class:"navbar-item" %>
                <a href="/users/<%=current_user.id%>">Profile Page</a>
                <a href="/users/sign_out"></a>
                <%= link_to "Create Boat", new_boat_path, class:"navbar-item" %>
                <%= link_to "Boats List", boats_path, class:"navbar-item" %>
                <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
              <% end %>

              <% if !user_signed_in? %>
                <li><a href="/users/sign_up">Sign Up</a></li>
                <li> <a href="/users/sign_in">Log In</a> </li>
              <% end %>

	          </div>
	        </div>
	      </div>
	    </nav>
	  </div>

	  <!-- Hero content: will be in the middle -->
	  <div class="hero-body">
	    <div class="container has-text-centered">
	      <h1 class="title">
	        <%= yield :page_title %>
	      </h1>
	    </div>
	  </div>
	</section>

    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= javascript_include_tag "home"%>
  </body>
</html>
