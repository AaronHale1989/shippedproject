<h2>Build New Boat</h2>

<%= form_for @boat do |f| %>

 <div class= "field"> 
    <div class= "control">
     Name: <%= f.text_field :name, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
   </div>
  </div>

   <div class= "field"> 
      <div class= "control">
       Location: <%= f.text_field :location, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %> 
      </div>
    <div>
    <hr>
  
    <div class= "field"> 
      <div class= "control">
        <%= f.text_field :boat_containers, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %> 
      </div>
    </div>

         <%= f.button :submit, class: "button is-warning"%>
      <% end %>
