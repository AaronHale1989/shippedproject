<h2>Build New Boat</h2>

<%= form_for @boat, html: { multipart: true } do |f| %>

 <div class= "field"> 
    <div class= "control">
     <textarea class="textarea is-primary" type="text" placeholder="Name"
      <%= f.text_field :name%></textarea>
   </div>
  </div>

   <div class= "field"> 
      <div class= "control">
      <textarea class="textarea is-primary" type="text" placeholder="Input Location"
      <%= f.text_field :location%></textarea>
      </div>
    <div>
    <hr>
  
    <div class= "field"> 
      <div class= "control">
        <textarea class="textarea is-primary" type="text" placeholder="Container Compacity"
      <%= f.text_field :boat_containers%></textarea>
      </div>
    </div>
      
      <%= f.label :image %>
      
      <%= f.file_field :image, class: 'form-control' %>

         <%= f.button :submit, class: "button is-warning"%>
      <% end %>





